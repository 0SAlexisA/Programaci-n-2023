#include<stdio.h>

int main()
{
    int i,j,n;
    
    printf("\n Ingresar la altura del arbol: ");
    scanf("%d", &n);
    for(j=1;i<=n;i++){
    for(j=1;j<=n-i-1;j++)
    printf(" ");
    for(j=1;j<=2*i-1;j++)
    printf("*");
    printf("\n");
    }
    printf(" |||");
    
    return 0;
}
